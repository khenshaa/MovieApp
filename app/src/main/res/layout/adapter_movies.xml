<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/adapter_movies_cardview_margin"
    app:cardBackgroundColor="#dedede"
    app:cardUseCompatPadding="true">

    <ImageView
        android:id="@+id/adapter_movies_poster"
        android:layout_width="match_parent"
        android:layout_height="@dimen/adapter_movies_poster_height"
        android:adjustViewBounds="true"
        android:contentDescription="@string/adapter_movies_poster_description" />
</android.support.v7.widget.CardView>